<style type="text/css">
	header.profile-page {
		display: flex;
		flex-direction: row;
		padding: 20px 0;
		margin-bottom: 45px;
	}

	.profile-page div.profile-page-image {
		flex-basis: 0;
		flex-grow: 1;
		flex-shrink: 0;
		margin-right: 30px;
	}

	div.profile-page-image img {
		display: block;
		margin-left: auto;
		margin-right: auto;

		height: 152px;
		margin-bottom: -7px;
		margin-top: -7px;
		width: 152px;

		background-color: #fafafa;
		border-radius: 50%;
		border: 1px solid #dbdbdb;
		box-sizing: border-box;
		overflow: hidden;
		position: relative;
	}

	.profile-page div.profile-page-info {
		flex-basis: 30px;
		flex-grow: 2;
		flex-shrink: 1;
		min-width: 0;
		color: #262626;
	}

	div.profile-page-info ul {
	 	display: flex;
		-webkit-box-orient: horizontal;
		-webkit-box-direction: normal;
		margin-top: 17px;
		padding: 0px;
		list-style: none;
	}

	div.profile-page-info ul > li:first-child {
		margin-left: 0;
	}
	div.profile-page-info ul > li {
	 	font-size: 17px;
		margin-right: 40px;
	}
</style>

<ul class="video-list">
